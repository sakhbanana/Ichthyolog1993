// Firestore rules for free plan (no Cloud Functions)
// Admin users can delete anything
// Regular users can delete only their own messages/files

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users list. Admin flag stored here.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat messages - исправлен путь для соответствия коду
    match /group_chat/group/messages/{messageId} {
      allow read: if request.auth != null;

      // Create message — user must be logged in
      allow create: if request.auth != null;

      // Update / Delete
      allow update, delete: if isAdmin() || isOwner();

      function isOwner() {
        return request.auth != null &&
               request.auth.uid == resource.data.authorId;
      }

      function isAdmin() {
        return request.auth != null &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      }
    }
  }
}
